<h1 class="font-bold text-2xl text-gray-900 mb-8"><%= @title %></h1>
<div class="w-full max-w-lg bg-white bg-opacity-25 rounded-lg">
  <%= if @events === "No event scheduled" do %>
    <p class="text-lg text-center p-6"><%= @events %></p>
  <% else %>
    <.event_display
      :for={event <- @events}
      event={event}
      show_address={false}
      user={@current_user}
    />
  <% end %>
</div>
